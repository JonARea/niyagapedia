extends layout

block content
  .container
    h1 Login Page
    p.lead Please enter your username and password
    br
    form(role='form', action="/login",method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='text', name="username", placeholder='Enter Username')
      .form-group
        input.form-control(type='password', name="password", placeholder='Password')
      button.btn.btn-primary(type='submit') Submit
      |  
      a(href='/')
        button.btn.btn-default(type="button") Cancel
    p
      a(href="/register") Don't have a username?
