extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Instrument:
      input#name.form-control(type='text', placeholders='name' name='name' value=(undefined===instrument ? '' : instrument.name))
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg
